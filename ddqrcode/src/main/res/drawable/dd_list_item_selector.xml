<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><layer-list>
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp"><shape android:shape="rectangle">
                    <solid android:color="#CBCBCB" />

                    <stroke android:width="0.5dp" android:color="#e5e5e5" />
                </shape></item>
        </layer-list></item>
    <item><layer-list>
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp"><shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />

                    <stroke android:width="0.5dp" android:color="#e5e5e5" />
                </shape></item>
        </layer-list></item>

</selector>